{
  "name": "network-related-thing",
  "version": "1.6.0",
  "description": "network related thing",
  "main": "main.js",
  "type": "module",
  "author": "countervolts",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.countervolts.networkrelatedthing",
    "productName": "Network Related Thing",
    "artifactName": "${productName}.${ext}",
    "files": [
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../server.exe",
        "to": "app/server.exe"
      },
      {
        "from": "../favicon.ico",
        "to": "favicon.ico"
      }
    ],
    "win": {
      "target": "portable",
      "icon": "../favicon.ico"
    }
  }
}